<Page x:Class="HomeWorkTheme10WpfApp.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeWorkTheme10WpfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно входа в систему">

    <Grid>
        <Label Style="{StaticResource labelResorse}"
               Content="Выберите роль:" HorizontalAlignment="Left" Margin="273,40,0,0" Grid.Row="1" VerticalAlignment="Top" Height="33" Width="158"/>
        <ComboBox Style="{StaticResource comboBoxResorse}"
                  x:Name="cmbUsers"
            HorizontalAlignment="Left" Margin="273,92,0,0" Grid.Row="1" VerticalAlignment="Top" Width="240" Height="38">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Role}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Style="{StaticResource buttonResourse}"
                x:Name="btnSignIn"
            Content="Войти в систему" Margin="312,165,0,0" Grid.Row="1" Height="40" Width="136" Click="btnSignIn_Click"/>
        

    </Grid>
</Page>
