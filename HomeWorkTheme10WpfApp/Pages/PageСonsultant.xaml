<Page x:Class="HomeWorkTheme10WpfApp.Pages.PageСonsultant"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomeWorkTheme10WpfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Окно консультанта">

    <Grid>
        <DataGrid x:Name="dtgClients" AlternatingRowBackground="LightBlue" AlternationCount="2" AutoGenerateColumns="False" ItemsSource="{Binding}">
        <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Фамилия" Binding="{Binding Surname}"/>
                <DataGridTextColumn Width="*" Header="Имя" Binding="{Binding Name}"/>
                <DataGridTextColumn Width="*" Header="Отчество" Binding="{Binding Patronymic}"/>
                <DataGridTextColumn Width="*" Header="Номер телефона" Binding="{Binding PhoneNumber}"/>
                <DataGridTextColumn Width="*" Header="Серия паспорта" Binding="{Binding SeriesOfPassport}"/>
                <DataGridTextColumn Width="*" Header="Номер паспорта" Binding="{Binding NumberOfPassport}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
